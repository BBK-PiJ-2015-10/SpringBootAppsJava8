
public class PalindromeService {
	
	
	public boolean isPalindrome(String word){
		if (word.isEmpty()){
			return false;
		}
		if (word.length() == 1){
			return true;
		}
		return isPalindrome(word,0,word.length());
		
	}
	
	private boolean isPalindrome(String word, int beg, int end){
		
		if (! (word.charAt(beg) == word.charAt(beg))){
			return false;
		}
		
		return true;
		
	}
	
	

}
